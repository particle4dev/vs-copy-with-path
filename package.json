{
  "name": "my-custom-copy-tool",
  "displayName": "My Custom Copy Tool",
  "publisher": "namvhoang",
  "description": "Adds contextâ€‘menu items to copy file or folder content, each wrapped with a path comment. Respects .gitignore for folders.",
  "version": "0.2.0",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "my-custom-copy-tool.copyFileContentWithPath",
        "title": "Copy File Content with Path Comment"
      },
      {
        "command": "my-custom-copy-tool.copyFileContentWithPathNoIgnore",
        "title": "Copy File Content with Path Comment (no .gitignore)"
      },
      {
        "command": "my-custom-copy-tool.copyFolderContentWithPath",
        "title": "Copy Folder Content with Path Comments"
      },
      {
        "command": "my-custom-copy-tool.copyFolderContentWithPathNoIgnore",
        "title": "Copy Folder Content with Path Comments (ignore .gitignore)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "!explorerResourceIsFolder",
          "command": "my-custom-copy-tool.copyFileContentWithPath",
          "group": "navigation@6"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "my-custom-copy-tool.copyFolderContentWithPath",
          "group": "navigation@6"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "my-custom-copy-tool.copyFolderContentWithPathNoIgnore",
          "group": "navigation@6"
        }
      ]
    },
    "configuration": {
      "title": "Copy with Path",
      "properties": {
        "my-custom-copy-tool.pathType": {
          "type": "string",
          "enum": [
            "relative",
            "absolute"
          ],
          "default": "relative",
          "description": "Path style used in the header comment."
        },
        "my-custom-copy-tool.includeCodeFence": {
          "type": "boolean",
          "default": true,
          "description": "Wrap copied text in Markdown code fences."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test:unit": "jest",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "test": "pnpm run compile && xvfb-run -a vscode-test",
    "test:manual": "MANUAL_TEST=1 pnpm test",
    "package": "vsce package"
  },
  "dependencies": {
    "ignore": "^5.3.0"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "~20.19.25",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "typescript": "^5.1.6"
  },
  "__metadata": {
    "installedTimestamp": 1764487900146,
    "targetPlatform": "undefined",
    "size": 2777917
  }
}
